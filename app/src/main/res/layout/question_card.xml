<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardView"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/questionMark"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="55dp"
            android:contentDescription="@string/question"
            android:src="@drawable/icon_question_mark" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="275dp"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="@+id/optionALabel"
            app:layout_constraintTop_toBottomOf="@+id/optionALabel"
            tools:layout_editor_absoluteX="63dp">

            <TextView
                android:id="@+id/questionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/optionA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/optionALabel"
                app:layout_constraintEnd_toEndOf="@+id/optionB"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/optionB"
                app:layout_constraintTop_toTopOf="@+id/optionALabel" />

            <TextView
                android:id="@+id/optionALabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/A"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/optionBLabel"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/optionBLabel"
                app:layout_constraintTop_toBottomOf="@+id/questionText" />

            <TextView
                android:id="@+id/optionB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/optionBLabel"
                app:layout_constraintEnd_toEndOf="@+id/optionC"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/optionC"
                app:layout_constraintTop_toTopOf="@+id/optionBLabel"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/optionBLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/B"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/optionCLabel"
                app:layout_constraintStart_toStartOf="@+id/optionCLabel"
                app:layout_constraintTop_toBottomOf="@+id/optionALabel" />

            <TextView
                android:id="@+id/optionC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/optionCLabel"
                app:layout_constraintEnd_toEndOf="@+id/optionD"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/optionD"
                app:layout_constraintTop_toTopOf="@+id/optionCLabel"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/optionCLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/C"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/optionDLabel"
                app:layout_constraintStart_toStartOf="@+id/optionDLabel"
                app:layout_constraintTop_toBottomOf="@+id/optionBLabel" />

            <TextView
                android:id="@+id/optionD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/optionDLabel"
                app:layout_constraintEnd_toEndOf="@+id/optionE"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/optionE"
                app:layout_constraintTop_toTopOf="@+id/optionDLabel"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/optionDLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/D"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/optionELabel"
                app:layout_constraintStart_toStartOf="@+id/optionELabel"
                app:layout_constraintTop_toBottomOf="@+id/optionCLabel" />

            <TextView
                android:id="@+id/optionE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/optionELabel"
                app:layout_constraintStart_toEndOf="@+id/optionELabel"
                app:layout_constraintTop_toTopOf="@+id/optionELabel"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/optionELabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="20dp"
                android:text="@string/E"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/optionDLabel"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="7dp"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/upgradeQuestion"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="@string/todo"
                android:padding="2dp"
                android:scaleType="centerInside"
                android:src="@drawable/button_upgrade_question" />

            <ImageButton
                android:id="@+id/deleteQuestion"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="@string/delete"
                android:padding="2dp"
                android:scaleType="centerInside"
                android:src="@drawable/button_delete_question" />

            <ImageButton
                android:id="@+id/showFile"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@drawable/button_attach_file"
                android:contentDescription="@string/attach_file"
                android:padding="2dp"
                android:scaleType="centerInside" />

            <ToggleButton
                android:id="@+id/showAnswer"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@drawable/button_show_answer"
                android:padding="10dp"
                android:scaleType="centerInside" />


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>